{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "ES5",
      "ES6"
    ],
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@js-mongo/*": [
        "./ts/*",
        "./cjs/*",
        "./esm/*"
      ],
      "@js-pure/*": [
        "./node_modules/js-pure/ts/*"
      ]
    },
    "allowJs": true,
    "checkJs": false,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./ts/**/*.ts"
  ],
  "exclude": [
    "/node_modules"
  ]
}
