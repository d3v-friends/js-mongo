{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "removeComments": true,
    "declaration": true,
    // type check
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    // paths
    "rootDir": ".",
    "paths": {
      "@src/*": [
        "./*"
      ]
    }
  },
  "include": [
    "./*",
    "./test"
  ],
  "exclude": [
    "./node_modules",
    "./etc"
  ]
}
